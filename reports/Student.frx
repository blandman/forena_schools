<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE root [
<!ENTITY nbsp "&#160;">
]>
<html xmlns:frx="urn:FrxReports">
<head>
<title>Student Assessment Profile</title>
<frx:category>Student</frx:category>
<frx:options hidden="1" />
<frx:fields>
  <frx:field id="@date_taken" format="iso_date" format-string="F d, Y"/> 
  <frx:field id="all_grades" link="student/{parm.person_id}?subject={parm.subject}">All</frx:field>
  <frx:field id="grade" link="student/{parm.person_id}?grade_level={grade_level}&amp;subject={parm.subject}"/> 
  <frx:field id="all_subjects" link="student/{parm.person_id}?grade_level={parm.grade_level}">All</frx:field>
  <frx:field id="subject" link="student/{parm.person_id}?grade_level={parm.grade_level}&amp;subject={subject}"/>
</frx:fields>
<frx:menu path="student/:person_id/view" type="default-local-task" title="general"/>
<frx:parameters>
</frx:parameters>
<frx:docgen />
</head>
<body>
	<div id="person" frx:block="ims/student/person_info" frx:foreach="*"  class="grid_8" >
	  <h1 frx:renderer="FrxTitle">{last_name}, {first_name}</h1>
	  <h3>Contact Info</h3>
	  <div class="address">
	  {address_street}<br/>
	  {address_city}, {address_state} {address_zip}<br/>
	  </div>
	  <div frx:if="{address_phone}">{address_phone}</div>
	  <div frx:if="{email}">{email}</div>
	  
  </div>
  <div class="grid_3" style="border: solid 1px; padding:  1em;">
    <h3>IDs</h3>
    <div><h4>SIS ID</h4>{person.sis_id}</div>
    <div><h4>State Student ID</h4>
     {person.state_student_id}
    </div> 
  </div>
  <div class="grid_12">
  <div id="enrollment" frx:block="ims/student/enrollment"  >
      <p>filter by grade</p>
      <ul class="hnav nav">
        <li>{all_grades}</li>
        <li frx:foreach="*" class="{selected}" >{grade}</li>
      </ul>
  </div>
  <div id="subjects" frx:block="ims/subjects">
      <p>filter by subject</p>
      <ul class="hnav nav">
        <li>{all_subjects}</li>
        <li frx:foreach="*" class="{selected}">{subject}</li>
      </ul>
  </div>
	</div>
  <div id="assessments" frx:block="ims/student/assessments" frx:foreach="*">
    <div class="grid_12">
    <h4 class="hrule">{grade_name} {sched_label} {test_name}</h4>
    <p>Assessment Date: {date_taken}</p>
    <div class="vgap" frx:foreach="scores[test/@strand_count='0']">
    <table width="32%" class="test-scores">
      <tbody>
      <tr frx:foreach="test">
        <th>{@name}</th><td class="l{@level}" width="50">{@score}</td>
      </tr>
      </tbody>
    </table>
    </div>
    </div>
    <div frx:foreach="scores[test/strand]" >
      <div frx:foreach="test[strand]" class="vgap grid_4">
        <table class="test-scores" width="100%">
          <tbody>
          <tr>
            <th>{@name}</th><td width="50" class="l{@level}">{@score}</td>
          </tr>
          <tr frx:foreach="strand">
            <td>{@name}</td><td class="l{@level}">{@score}</td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
</html>
